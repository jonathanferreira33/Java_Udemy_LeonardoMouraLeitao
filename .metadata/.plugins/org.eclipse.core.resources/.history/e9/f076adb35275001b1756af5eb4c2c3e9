package arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioForeach {
	
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Quantas notas vc deseja informar?");
		double[] quantidadeNotas= new double[entrada.nextInt()];
		
		for(int i = 0; i < quantidadeNotas.length; i++) {
			System.out.print("Digite a nota " + (i+1) + ": ");
			quantidadeNotas[i] = entrada.nextDouble();
		}
		
		System.out.println(Arrays.toString(quantidadeNotas) );
	}

}
