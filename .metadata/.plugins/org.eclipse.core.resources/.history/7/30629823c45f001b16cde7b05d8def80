package classe;

public class Data {
	
	int dia;
	String mes;
	int ano;
	
	String obterDataFormatada() {
		return String.format( "%d / %s / %d ", dia, mes, ano);
	}
	
	Data() { //contrustor padrão com data fixa caso não ocorra atribuição
		dia = 01;
		mes = "JAN";
		ano = 1970;
	}
	
	Data(int dia, String mes, int ano) {
		this.dia = dia;
		this.mes = mes;
		this.ano = ano;
	}
}

